{
  "name": "ramme-buddy",
  "version": "0.0.1",
  "main": "service.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/index.js",
    "test": "jest",
    "test:ci": "cross-env CI=true jest --coverage --runInBand",
    "watch": "jest --watchAll",
    "prettier": "prettier --write 'src/**/*.ts'",
    "dev": "ts-node-dev ./src/index.ts | pino-pretty -c -t",
    "nodemon": "cross-env nodemon",
    "lint": "eslint ./src --ext ts",
    "lint:fix": "yarn lint --fix",
    "rimraf": "rimraf dist",
    "prebuild": "yarn rimraf",
    "build": "tsc",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "heroku-postbuild": "yarn run build && yarn run typeorm migration:run",
    "test:create": "./scripts/createdb.sh rammebuddy-test",
    "test:migrate": "cross-env CI=true yarn typeorm schema:sync"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "roots": [
      "./src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/__tests__/fixtures"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/migration/**/*",
      "!src/__tests__/fixtures/**/*",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.150",
    "@types/nanoid": "2.1.0",
    "@types/node": "13.13.5",
    "@types/pg": "7.14.3",
    "@types/pino": "6.0.0",
    "@types/supertest": "2.0.9",
    "@types/uuid": "7.0.3",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "coveralls": "3.1.0",
    "cross-env": "7.0.2",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.10.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-typescript": "0.14.0",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3",
    "yorkie": "2.0.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "4.17.15",
    "moment": "2.25.3",
    "nanoid": "3.1.7",
    "pg": "8.1.0",
    "pino": "6.2.1",
    "pino-pretty": "4.0.0",
    "reflect-metadata": "0.1.13",
    "tsconfig-paths": "3.9.0",
    "typeorm": "0.2.24"
  }
}