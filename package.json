{
  "name": "RammeBuddy",
  "version": "0.0.1",
  "main": "service.ts",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "watch": "jest --watchAll",
    "prettier": "prettier --write 'src/**/*.ts'",
    "dev": "ts-node-dev ./src/server.ts | pino-pretty -c -t",
    "nodemon": "cross-env nodemon",
    "lint": "eslint ./src --ext ts",
    "lint:fix": "yarn lint --fix",
    "rimraf": "rimraf dist",
    "prebuild": "yarn rimraf",
    "build": "tsc"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "roots": [
      "./src"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettier",
      "yarn lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.2",
    "@types/jest": "24.9.1",
    "@types/node": "13.13.2",
    "@types/pg": "7.14.1",
    "@types/pino": "6.0.0",
    "@types/uuid": "3.4.9",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "cross-env": "6.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "22.21.0",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-typescript": "0.14.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.1",
    "ts-jest": "24.3.0",
    "ts-node": "8.6.2",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.7.5",
    "yorkie": "2.0.0"
  },
  "dependencies": {
    "pino": "^6.0.0",
    "pino-pretty": "^3.5.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "nanoid": "^2.1.11",
    "pg": "^7.12.1"
  }
}
